{
  // help URL (default: none)
  "HelpUrl": "https://github.com/Payroll-Engine",

  // file assets directory (default: working directory)
  "FileAssetsPath": "..",

  // theme (default: system setting)
  //"DarkMode": false,

  // http connection timeout in seconds (default: 5)
  //"HttpConnectTimeout": 10,

  // app auto efresh timeout in seconds: 0=off, range: 15...3'600 (default: 120)
  //"AutoRefreshTimeout": 0,
  //"AutoRefreshTimeout": 30,

  // logger
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "System": "Warning",
        "Microsoft": "Warning",
        "HealthChecks": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "pathWindows": "%PROGRAMDATA%/PayrollEngine/Console/logs/log-.log",
                "path": "logs/log-.log",
                "rollingInterval": "Day",
                "retainedFileCountLimit": 7,
                "buffered": false,
                "restrictedToMinimumLevel": "Information"
              }
            }
          ]
        }
      },
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss:fff} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  }
}
