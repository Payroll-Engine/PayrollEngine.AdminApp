<Window x:Class="PayrollEngine.AdminApp.Windows.AppAboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Icon="appicon.ico"
        Background="{StaticResource AppBackgroundBrush}"
        Foreground="{StaticResource AppForegroundBrush}"
        BorderBrush="{StaticResource AppForegroundBrush}"
        BorderThickness="1"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Height="400"
        Width="600">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="35" />
    </WindowChrome.WindowChrome>

    <Grid>
        <StackPanel VerticalAlignment="Center" 
                    HorizontalAlignment="Center">

            <Image Source="Resources/AppDark.png"
                   Width="500"
                   Height="80"/>

            <TextBlock Name="AppName"
                       HorizontalAlignment="Center"
                       FontSize="30"
                       Padding="0 20 0 0" />

            <TextBlock Name="Copyright"
                       HorizontalAlignment="Center"
                       FontSize="12"
                       Padding="0 5 0 0" />

            <TextBlock Name="AppVersion"
                       HorizontalAlignment="Center"
                       Padding="0 40 0 0"
                       FontSize="14" />

            <TextBlock HorizontalAlignment="Center"
                       Padding="0 5 0 0">
                <Hyperlink Name="UrlLink">
                    <TextBlock Name ="UrlLinkLabel"
                               FontSize="14"/>
                </Hyperlink>
            </TextBlock>

            <Button Content="OK"
                    Margin="0 40 0 0"
                    Style="{StaticResource WindowButton}"
                    Width="100"
                    Height="30"
                    Name="CloseButton"/>
        </StackPanel>
    </Grid>
</Window>
