@inherits FileTypeRegisterDialogBase

<MudDialog Class="item-dialog" TitleClass="mud-theme-primary pe-dialog-title"
           Style="min-width: 30rem; max-width: 40rem; min-height: 12rem; max-height: 24rem">
    <DialogContent>
        <MudStack Class="pb-8">
            <MudText Class="ma-4">@Localizer.FileTypeRegisterMessage(FileTypeExtension)</MudText>
            <MudStack Row="true" Class="justify-center">
                <MudButton Class="mx-4"
                           Variant="@Globals.ButtonVariant"
                           Color="Color.Default"
                           OnClick="Cancel">
                    @Localizer.Cancel
                </MudButton>
                <MudButton Class="mx-4"
                           Variant="@Globals.ButtonVariant"
                           Color="Color.Primary"
                           OnClick="Unregister">
                    @Localizer.Unregister
                </MudButton>
                <MudButton Class="mx-4"
                           Variant="@Globals.ButtonVariant"
                           Color="Color.Primary"
                           OnClick="Register">
                    @Localizer.Register
                </MudButton>
            </MudStack>
        </MudStack>
    </DialogContent>
</MudDialog>
